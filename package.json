{
  "private": true,
  "scripts": {
    "install": "./node_modules/.bin/bower install",
    "jshint": "./node_modules/.bin/jshint .",
    "list": "node -e 'console.log(Object.keys(require(\"./package.json\").scripts).join(\"\\n\"))' | egrep -v '^(test|jshint|install|list)$'",
    "test": "npm run list | grep -v watch | while read script; do echo; echo \"###################### $(echo $script) #####################\"; npm run $script || exit 1; done",
    "testem-watch-vanillajs-jasmine": "./node_modules/.bin/testem -f tests/vanillajs/jasmine/testem.js",
    "testem-watch-vanillajs-mocha": "./node_modules/.bin/testem -f tests/vanillajs/mocha/testem.js",
    "testem-watch-vanillajs-qunit": "./node_modules/.bin/testem -f tests/vanillajs/qunit/testem.js",
    "testem-watch-vanillajs-qunit-blanket": "./node_modules/.bin/testem -f tests/vanillajs/qunit/testem-blanket.js",
    "testem-test-vanillajs-jasmine": "./node_modules/.bin/testem -f tests/vanillajs/jasmine/testem.js ci",
    "testem-test-vanillajs-mocha": "./node_modules/.bin/testem -f tests/vanillajs/mocha/testem.js ci",
    "testem-test-vanillajs-qunit": "./node_modules/.bin/testem -f tests/vanillajs/qunit/testem.js ci",
    "testem-test-vanillajs-qunit-blanket": "./node_modules/.bin/testem -f tests/vanillajs/qunit/testem-blanket.js ci",
    "karma-test-vanillajs-jasmine": "./node_modules/karma/bin/karma start tests/vanillajs/jasmine/karma.conf.js && cat tests/vanillajs/jasmine/coverage/summary.txt && echo",
    "karma-test-vanillajs-mocha": "./node_modules/karma/bin/karma start tests/vanillajs/mocha/karma.conf.js && cat tests/vanillajs/mocha/coverage/summary.txt && echo",
    "karma-test-vanillajs-qunit": "./node_modules/karma/bin/karma start tests/vanillajs/qunit/karma.conf.js && cat tests/vanillajs/qunit/coverage/summary.txt && echo",
    "karma-watch-vanillajs-jasmine": "./node_modules/karma/bin/karma start tests/vanillajs/jasmine/karma.conf.js --no-single-run --auto-watch",
    "karma-watch-vanillajs-mocha": "./node_modules/karma/bin/karma start tests/vanillajs/mocha/karma.conf.js --no-single-run --auto-watch",
    "karma-watch-vanillajs-qunit": "./node_modules/karma/bin/karma start tests/vanillajs/qunit/karma.conf.js --no-single-run --auto-watch"
  },
  "devDependencies": {
    "bower": "^1.3.12",
    "globby": "^1.0.0",
    "jasmine-core": "^2.1.3",
    "jshint": "^2.5.11",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^0.2.7",
    "karma-jasmine": "^0.3.2",
    "karma-mocha": "^0.1.10",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-qunit": "^0.1.4",
    "phantomjs": "^1.9.12",
    "testem": "^0.6.24"
  }
}
